# https://editorconfig.org/

root = true

[*]
charset = utf-8
insert_final_newline = true
indent_style = space
trim_trailing_whitespace = true

[*.{cs,razor}]
indent_size = 4

[*.{html,css,js}]
indent_size = 2

[*.json]
indent_size = 2

[*.csproj]
indent_size = 2

[*.yml]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
